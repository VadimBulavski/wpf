<Window x:Class="ExamSearchBank.Forms.CreateEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить кассира" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="spFirstName" Grid.Row="0">
            <Label Content="Имя:" FontSize="16"/>
            <TextBox x:Name="tbFirstName" Margin="5" FontSize="16"/>
        </StackPanel>
        <StackPanel x:Name="spLaststName" Grid.Row="1">
            <Label Content="Фамилия:" FontSize="16"/>
            <TextBox x:Name="tbLastName" Margin="5" FontSize="16"/>
        </StackPanel>
        <StackPanel x:Name="spPatronymic" Grid.Row="2">
            <Label Content="Отчество:" FontSize="16"/>
            <TextBox x:Name="tbPatronymic" Margin="5" FontSize="16"/>
        </StackPanel>
        <StackPanel x:Name="spSaveEmployee" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btEmployeeOk" Content="Сохранить" Margin="10" Click="btEmployeeOk_Click"/>
            <Button x:Name="btEmployeeCancel" Content="Отмена" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
