<Window x:Class="ExamSearchBank.Forms.CreateService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить услугу" Height="200" Width="350" MaxHeight="200" MinHeight="200" MaxWidth="350" MinWidth="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Введите название услуги:" Margin="15,5,5,5" FontSize="16"/>
        <TextBox x:Name="tbServiceName" Margin="20,35,20,20"/>
        <StackPanel x:Name="spServise" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btServiceOk" Content="Сохранить" FontSize="16" Margin="10" Click="btServiceOk_Click"/>
            <Button x:Name="btServiceCancel" Content="Отмена" FontSize="16" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Window>
